<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jianpeng.mooddiary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/Register"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TravelDiaryActivity"
            android:label="@string/Travel_Diary"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".MoodTagActivity"
            android:label="@string/Mood_Tag"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".WorkRecordActivity"
            android:label="@string/Work_Record"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".CardDiaryActivity"
            android:label="@string/Card_Diary"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/Setting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Mood_Tag_Add_Activity"
            android:label="@string/Add_Mood_Tag"
            android:parentActivityName=".MoodTagActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Work_Record_Add_Activity"
            android:label="@string/Add_Work_Record"
            android:parentActivityName=".MoodTagActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Travel_Diary_Add_Activity"
            android:label="@string/Add_Travel_Dairy"
            android:parentActivityName=".MoodTagActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Travel_Diary_Show_Activity"
            android:parentActivityName=".MoodTagActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".Card_Diary_Add_Activity"
            android:theme="@style/MyAppTheme" />
    </application>

</manifest>