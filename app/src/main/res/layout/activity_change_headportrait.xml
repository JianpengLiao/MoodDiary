<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Change_headportrait_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/title_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:onClick="onClickBack"
            android:src="@drawable/menu_back_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Me"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="20sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your head protrait"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:onClick="onClick1"
                android:layout_height="80dp"
                android:background="@drawable/me_avatar"/>

            <ImageButton
                android:id="@+id/imageButton2"
                android:onClick="onClick2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:onClick="onClick3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/imageButton4"
                android:onClick="onClick4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/me_avatar_4" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:onClick="onClick5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_5" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:onClick="onClick6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_6" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/imageButton7"
                android:onClick="onClick7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/me_avatar_7" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:onClick="onClick8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_8" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:onClick="onClick9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/me_avatar_9" />

        </LinearLayout>


    </LinearLayout>







</android.support.constraint.ConstraintLayout>